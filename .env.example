# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hawk_esports_db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# PUBG API Configuration
PUBG_API_KEY=your_pubg_api_key_here
PUBG_API_BASE_URL=https://api.pubg.com

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# API Configuration
API_PORT=3001
API_HOST=localhost
CORS_ORIGIN=http://localhost:3000

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/webm

# Music Configuration
YOUTUBE_API_KEY=your_youtube_api_key_here
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# Development Configuration
NODE_ENV=development
DEBUG=true

# Dashboard Configuration
DASHBOARD_URL=http://localhost:3000
DASHBOARD_SECRET=your_dashboard_secret_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# AI Configuration (for future features)
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
MONITORING_ENABLED=false