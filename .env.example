# ===========================================
# HAWK ESPORTS BOT - Environment Variables
# ===========================================

# Environment
NODE_ENV=production
DEBUG=false

# Discord Configuration (REQUIRED)
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@hostname:port/database
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_CONNECTION_TIMEOUT=30000
DATABASE_IDLE_TIMEOUT=600000

# Security Configuration (REQUIRED)
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
WEBHOOK_SECRET=your_webhook_secret_here
CSRF_SECRET=your_csrf_secret_here
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_32_characters

# Redis Configuration (OPTIONAL)
REDIS_URL=redis://localhost:6379
REDIS_POOL_MIN=5
REDIS_POOL_MAX=20
REDIS_CONNECTION_TIMEOUT=10000
REDIS_RETRY_ATTEMPTS=3
REDIS_RETRY_DELAY=1000

# API Configuration
API_PORT=3001
PORT=10000
API_HOST=0.0.0.0
CORS_ORIGIN=*
API_TIMEOUT=30000
API_BODY_LIMIT=10mb

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=logs/production.log
LOG_ERROR_FILE=logs/error.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_COMPRESS=true

# Cache Configuration
CACHE_TTL=1800
CACHE_MAX_KEYS=10000
CACHE_CHECK_PERIOD=600
CACHE_USE_CLONE=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true
RATE_LIMIT_SKIP_FAILED_REQUESTS=true
RATE_LIMIT_STORE=redis

# Monitoring
MONITORING_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080
HEALTH_CHECK_INTERVAL=30000

# Performance
MAX_CONCURRENT_COMMANDS=100
COMMAND_TIMEOUT=30000
MEMORY_LIMIT=512
CPU_LIMIT=1

# Backup Configuration
BACKUP_INTERVAL=43200000
BACKUP_RETENTION_DAYS=90
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=true
BACKUP_STORAGE_PATH=backups/
BACKUP_S3_BUCKET=your_s3_bucket_name
BACKUP_S3_REGION=us-east-1

# Feature Flags
FEATURE_MUSIC_ENABLED=true
FEATURE_PUBG_ENABLED=true
FEATURE_DASHBOARD_ENABLED=true
FEATURE_AI_ENABLED=true
FEATURE_BACKUP_ENABLED=true
FEATURE_MONITORING_ENABLED=true

# Graceful Shutdown
GRACEFUL_SHUTDOWN_TIMEOUT=30000
SIGTERM_TIMEOUT=15000

# External APIs (OPTIONAL)
PUBG_API_KEY=your_pubg_api_key_here
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
YOUTUBE_API_KEY=your_youtube_api_key_here
WEBHOOK_URL=your_webhook_url_here

# Security
FORCE_HTTPS=true

# Timezone
TZ=UTC