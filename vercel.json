{
  "version": 2,
  "name": "hawk-esports-dashboard",
  "builds": [
    {
      "src": "dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dashboard/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://bot-hawk-esports.up.railway.app/api/:path*"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/dashboard/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://bot-hawk-esports.up.railway.app",
    "VITE_BOT_INVITE_URL": "https://discord.com/api/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=8&scope=bot%20applications.commands"
  },
  "buildCommand": "cd dashboard && npm ci && npm run build",
  "outputDirectory": "dashboard/dist",
  "installCommand": "cd dashboard && npm ci",
  "framework": "vite"
}