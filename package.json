{
  "name": "hawk-esports-bot",
  "version": "1.0.0",
  "description": "Bot Discord completo para Hawk Esports (PUBG) com dashboard, gamificação e sistema de rankings",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/database/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "discord",
    "bot",
    "pubg",
    "esports",
    "gaming",
    "typescript"
  ],
  "author": "Hawk Esports",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "@prisma/client": "^5.7.1",
    "@discordjs/voice": "^0.17.0",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "node-cron": "^3.0.3",
    "redis": "^4.6.11",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "ytdl-core": "^4.11.5",
    "play-dl": "^1.9.7",
    "ffmpeg-static": "^5.2.0",
    "canvas": "^2.11.2",
    "chart.js": "^3.9.1",
    "chartjs-node-canvas": "^4.1.6",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "@discordjs/builders": "^1.7.0",
    "@discordjs/rest": "^2.2.0",
    "ioredis": "^5.3.2",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "ytsr": "^3.8.4",
    "youtube-sr": "^4.3.11",
    "spotify-web-api-node": "^5.0.2",
    "winston-daily-rotate-file": "^4.7.1",
    "chalk": "^4.1.2",
    "mime-types": "^2.1.35",
    "file-type": "^18.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/mime-types": "^2.1.4",
    "@types/jest": "^29.5.8",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "ts-node": "^10.9.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "rimraf": "^5.0.5",
    "prisma": "^5.7.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}